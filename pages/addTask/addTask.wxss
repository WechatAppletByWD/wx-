/* pages/addTask/addTask.wxss */
.main{
  width: 100%;
  height: 100vh;
  background-color: #eee;


}

.section{
  border-top: 0.1rem solid #eee;
  padding: 0.7rem;
  background-color: #fff;
}
.section #title{
  font-size: 1rem;
}
.section #content{
  font-size: 0.7rem;
  padding-top: 0.5rem;
}
.btn-area{
  position: fixed;
  bottom: 0.2rem;
  left: 0;
  width: 100%;
  background-color: #fff;
}
.btn-area .btn-sub{
  margin: 0.2rem 0.5rem;
  background-color: red;
  border-radius: 0px;

}
.btn-area .btn-sub button{
  height: 2rem;
  margin: 0px;
  background-color: rgba(0,0,0,0);
  line-height: 2rem;
  color: #fff;
}

