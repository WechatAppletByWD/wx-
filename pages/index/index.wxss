
.main {
  background: #eee url('http://pxyu.xin:8080/system/index_bgy.jpg');
  background-size: 100% auto;
  min-height: 100vh;
  overflow-x: hidden;
  transition: all 0.1s;
  
}
.swiper{
  margin: 1rem;
  border-radius: 1rem;
  overflow: hidden;
  box-shadow: 5px 5px 10px #888888;
}
.slide-image {
  width: 100%;
  border-radius: 1rem;
  height: 100%;
}

.list {
  padding: 0.2rem;
  border-radius: 1rem;
  margin: 1rem;
  background-color: #fff;
  box-shadow: 5px 5px 10px #888888;
}
.list .content{
  overflow: hidden;
}
.list .top {
  display: inline-flex;
  padding-left: 5px;
  width: 100%;
  height: 2rem;
}

.list .face {
  width: 2rem;
  height: 2rem;
  margin: 5px;
  border-radius: 50%;
}

.list .title {
  font-size: 0.8rem;
  font-weight: 800;
}

.list .info {
  font-size: 0.7rem;
  font-weight: 400;
  color: #aaa;
  white-space:nowrap;
  overflow:hidden;
}

.list .photos {
  white-space: nowrap;
  box-sizing: border-box;
  width: 100%;
  padding: 0 0;
  text-align: center;
}

.list .photo {
  display: inline-block;
  margin: 0 3px;
  width: 5rem;
  height: 5rem;
  
}

.list .main_txt {
  display: block;
  padding: 0.3rem 40px;
  font-size: 0.8rem;
  width: 80%;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal !important;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.getMsg{
  text-align: center;
  background-color: rgba(0, 0, 0, 0);
}
.button-box {
  text-align: right;
}

.button-box .button {
  margin-right: 20px;
  box-shadow: 2px 2px 5px #888888;
}
