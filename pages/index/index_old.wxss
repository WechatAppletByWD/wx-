.main {
  background-color: #eee;
  height: auto;
  overflow-x: hidden;
}

.slide-image {
  width: 100%;
}

.list {
  padding: 0.2rem;
  width: 100%;
  margin-bottom: 1px;
  background-color: #fff;
}
.list .content{
  overflow: hidden;
}
.list .top {
  display: inline-flex;
  padding-left: 5px;
  width: 100%;
  height: 2rem;
}

.list .face {
  width: 2rem;
  height: 2rem;
  margin: 5px;
  border-radius: 50%;
}

.list .title {
  font-size: 0.8rem;
  font-weight: 800;
}

.list .info {
  font-size: 0.7rem;
  font-weight: 400;
  color: #aaa;
  white-space:nowrap;
  overflow:hidden;
}

.list .photos {
  white-space: nowrap;
  box-sizing: border-box;
  width: 100%;
  padding: 0 1.5rem;
}

.list .photo {
  display: inline-block;
  margin: 0 3px;
  width: 5rem;
  height: 5rem;
  
}

.list .main_txt {
  display: block;
  padding: 0.3rem 40px;
  font-size: 0.8rem;
  width: 80%;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal !important;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.getMsg{
  text-align: center;
  background-color: white;
  
}
.button-box {
  text-align: right;
}

.button-box .button {
  margin-right: 20px;
}
