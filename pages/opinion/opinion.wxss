.main{
  width: 100%;
  height: 100vh;
  background-color: #eee;


}

.section{
  border-top: 0.1rem solid #eee;
  padding: 0.7rem;
  background-color: #fff;
}
.section #title{
  font-size: 1rem;
}
.section #content{
  font-size: 0.7rem;
  padding-top: 0.5rem;
}
.section .form_tr{
  margin: 0.5rem 0;
}
.section .form_tr view,input{
  display: inline-block;
  line-height: 1.5rem;
  vertical-align: middle;
}
.section .form_tr .key{
  border-left: 0.2rem solid #eee;
  font-size: 0.8rem;
  color: gray;
  padding-right: 1rem;
  padding-left: 0.5rem;
  vertical-align:baseline;
}




.btn-area{
  position: fixed;
  bottom: 0.2rem;
  left: 0;
  width: 100%;
  background-color: #fff;
}
.btn-area .btn-sub{
  margin: 0.2rem 0.5rem;
  background-color: red;
  border-radius: 0px;

}
.btn-area .btn-sub button{
  height: 2rem;
  margin: 0px;
  background-color: rgba(0,0,0,0);
  line-height: 2rem;
  color: #fff;

}

.now_address .address_text{
  display: inline-block;
  width: 90%;
  font-size: 0.8rem;
  line-height: 1rem;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.now_address .address_text input{
  width: 100%;
}
.now_address .btn_get_location{
  display: inline-block;
  width: 1rem;
  height: 1rem;
  background-size: 1rem 1rem;
}

