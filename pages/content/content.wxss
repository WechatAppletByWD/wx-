.main {
  
}

.top-title {
  background-color: white;
  padding: 0 1rem;
  font-size: 1rem;
  font-weight: 900;
}

.task-address {
  display: inline-block;
  margin-left: 1rem;
  background-color: #eee;
  line-height: 0.7rem;
  font-size: 0.6rem;
  padding: 0.3rem;
  border-radius: 0.7rem;
  color: #777;
}

.content {
  margin: 1rem 0;
  font-size: 0.8rem;
  padding: 1rem;
}

.userInfo-box {
  border-style: solid;
  border-color: #eee;
  border-width: 0.5rem 0.7rem;
  max-width: 100%;
}

.userInfo-box .user-top .top-left .face {
  margin: 0.5rem;
  display: inline-block;
  width: 3rem;
  height: 3rem;
  border-radius: 2rem;
  vertical-align: top;
}

.userInfo-box .user-top .top-left .top-middle {
  display: inline-block;
  margin-left: 1rem;
}

.userInfo-box .user-top .top-left .top-middle .username {
  font-size: 0.8rem;
  margin-top: 0.5rem;
}

.userInfo-box .user-top .top-left .top-middle .info {
  font-size: 0.5rem;
  color: #777;
}
.photos {
  white-space: nowrap;
  box-sizing: border-box;
  width: 100%;
  padding: 0 0.5rem;
}

.photo {
  display: inline-block;
  margin: 0 3px;
  width: 5rem;
  height: 5rem;
  
}

.footer {
  position: fixed;
  width: 100vw;
  bottom: 0;
  left: 0;
}

.footer .button-box {
  line-height: 2rem;
  text-align: right;
}

.footer .button-box .button {
  margin-right: 1rem;
  border-radius: 0;
  border: none;
}

.modal-box-top {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
}
.modal-box-top .modal-content{
  max-width: 100%;
  background-color: #fff;
}
.modal-box-top .modal-content .tel{
  text-align: center;
  padding: 2rem 0;
}

