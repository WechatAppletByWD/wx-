  <view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全部</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">接单</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">发布</view>
    <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">完成</view>
  </view>

  <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
    <!-- 全部 -->
    <swiper-item>
      <view class='task_list'>
        <view class='task' wx:for="{{array}}">
          <view class='title'>{{item.title}}</view>
          <view class='content'>{{item.content}}</view>
          <view class='button-box'>
            <button type='warn' size='mini' class='button' id='{{taskInfo.tlocation_id}}' bindtap='taskIncept'>
              <view wx:if="{{item.msg===1}}">取消接单</view>
              <view wx:if="{{item.msg===0}}">撤回任务</view>
            </button>
          </view>
        </view>
      </view>
    </swiper-item>
    <!-- 接单 -->
    <swiper-item>
      <view class='task_list'>
        <view class='task' wx:for="{{array}}" wx:if="{{item.msg===1}}">
          <view class='title'>{{item.title}}</view>
          <view class='content'>{{item.content}}</view>
          <view class='button-box'>
            <button type='primary' size='mini' class='button complete' bindtap="show">^搞定^</button>
            <button type='warn' size='mini' class='button' id='{{taskInfo.tlocation_id}}' bindtap='taskIncept'>
              <view>取消接单</view>
              
            </button>
          </view>
        </view>
      </view>
    </swiper-item>
    <!-- 发布的任务 -->
    <swiper-item>
      <view class='task_list'>
        <view class='task' wx:for="{{array}}" wx:if="{{item.msg===0}}">
          <view class='title'>{{item.title}}</view>
          <view class='content'>{{item.content}}</view>
          <view class='button-box'>
            <button type='warn' size='mini' class='button' id='{{taskInfo.tlocation_id}}' bindtap='taskIncept'>
              <view>撤回任务</view>
              
            </button>
          </view>
        </view>
      </view>
    </swiper-item>
    <!--完成  -->
    <swiper-item>
      <view>完成</view>
    </swiper-item>
  </swiper>
</view>